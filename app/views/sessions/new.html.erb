<div class="container">
  <h3>Login</h3>
  <%= form_tag session_path, method: :post do %>
    <div>
      <%= label_tag :username %>
      <%= text_field_tag :username %>
    </div>
    <div>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <div>
      <%= submit_tag 'Login' %>
    </div>
  <% end %>
</div>

<div class="container">
  <h3>Register</h3>
</div>
